<% include partials/header%>
<body style="background-color: #007eff;  background-repeat: no-repeat; max-height: 100%; background-size: 1366px 720px; 1366px;" background="zz.jpg">
<br>
<div  style="background-color: #000000cc; margin-left: 33%; margin-top: -2%; height: 100%; width: 30%;">
        
            <h3 style="font-family: Broadway; color: yellow; font-size: 28px; padding: 10px; padding-left: 20px; ">Book a Ride</h3><hr style=" background-color: aliceblue;">
        
        
        
        <div class="container">
            
            <form action="/book" method="POST">
               
                <div class="form-group" >
                    <label  style="color: white; font-size: 15px;">Enter Pickup Location:</label>
                    <input type="text" class="form-control"  placeholder="Enter Pickup Location..." style="font-size: 15px;" name="pickup" required>
                </div>
                
                <div class="form-group" >
                    <label  style="color: white; font-size: 15px;">Enter Destination:</label>
                    <input type="text" class="form-control"  placeholder="Enter Destination..." style="font-size: 15px;" name="destination" required>
                </div>
                <p style="color:whitesmoke;">Tip: Please enter Address along with city name for Better And Faster Results.</p>
                 <form>
                     <label class="radio-inline" style="font-family: calibri; color: greenyellow; margin-right: 10%; font-size: 22px;">
                         <input type="radio" name="vehicle" value="bike" checked><b>Bike
                     </label>
                     <label class="radio-inline" style="font-family: calibri; color: greenyellow; margin-right: 10%; font-size: 22px;">
                         <input type="radio" name="vehicle" value="micro"><b>Micro
                     </label>
                     <label class="radio-inline" style="font-family: calibri; color: greenyellow; margin-right: 10%; font-size: 22px;">
                         <input type="radio" name="vehicle" value="mini"><b>Mini
                     </label>
                     <label class="radio-inline" style="font-family: calibri; color: greenyellow; font-size: 22px;">
                         <input type="radio" name="vehicle" value="sedan"><b>Sedan
                     </label>
                </form><hr style="background-color:aliceblue">
                
                
                
                
               
                <button type="submit" class="btn btn-default" style=" background-color: greenyellow; font-size: 15px; margin-left: 25%; font-family: Broadway; padding-left: 8%; padding-right: 8%;">Find Ride</button>
            </form>
        </div>

        </div>
